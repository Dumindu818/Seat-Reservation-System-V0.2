@model Seat_Reservation_System.Models.User
@{
    Layout = null;
    ViewBag.Title = "User Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit My Profile</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-image: url('/assets/images/background.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            overflow: hidden;
        }

        .admin-dashboard {
            display: flex;
            width: 100%;
            height: 100vh;
            position: relative;
        }

        .sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            justify-content: space-between;
        }

        .logo-container {
            width: 100%;
            padding: 0 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-bg-void-1 {
            width: 100%;
            height: 120px;
            background: url('/assets/images/logo_bg_void_1.png') center/contain no-repeat;
        }

        .nav-items {
            display: flex;
            flex-direction: column;
            gap: 30px;
            flex-grow: 0.5;
            justify-content: center;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 20px;
            cursor: pointer;
        }

            .nav-item .icon {
                width: 40px;
                height: 40px;
            }

            .nav-item .nav-text {
                font-weight: 600;
                font-size: 24px;
                color: #00B5EC;
            }

            .nav-item .logout {
                color: #DD5353;
            }

        .logout-container {
            margin-top: auto;
            margin-bottom: 30px;
        }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #00B5EC;
            padding: 40px;
            position: relative;
        }

        .header {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            width: 100%;
            padding: 20px;
        }

        .admin-btn {
            display: flex;
            align-items: center;
            gap: 20px;
            background: none;
            border: none;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 40px;
            z-index: 10;
        }

            .admin-btn .adminsl {
                font-weight: 600;
                font-size: 48px;
                color: #4DB848;
            }

            .admin-btn .user-icon img {
                width: 60px;
                height: 60px;
            }

        .container-4 {
            border-radius: 30px;
            background: #FFFFFF;
            position: absolute;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px;
            width: 1200px;
            height: 550px;
            box-sizing: border-box;
            margin-top: 110px;
            margin-left: 40px;
            margin-bottom: 40px;
            margin-right: 40px;
        }

        .container-7, .container-3 {
            margin-bottom: 20px;
            display: flex;
            flex-direction: row;
            width: 80%;
            justify-content: space-between;
            box-sizing: border-box;
        }

        .profile-overview {
            width: 100%;
            font-weight: 600;
            font-size: 40px;
            color: #00B5EC;
            text-align: left;
            margin-bottom: 20px;
        }

        .group-14 {
            border-radius: 30px;
            background: rgba(176, 247, 255, 0.57);
            display: flex;
            flex-direction: row;
            align-items: center;
            padding: 10px 20px;
            cursor: pointer;
            position: absolute;
            top: 30px;
            right: 30px;
        }

        .pay-now {
            font-weight: 600;
            font-size: 20px;
            color: #00B5EC;
        }

        .edit-3-svgrepo-com {
            width: 24px;
            height: 24px;
            margin-right: 10px;
        }

        .line-1 {
            background: #00B5EC;
            width: 100%;
            height: 2px;
            margin: 20px 0;
        }

        .username, .email, .password, .confirm-password {
            font-weight: 600;
            font-size: 20px;
            color: #00B5EC;
            width: 25%;
        }

        .group-1, .group-29 {
            border-radius: 30px;
            background: rgba(192, 249, 255, 0.28);
            padding: 0;
            width: 70%;
            box-sizing: border-box;
        }

        .user-input, .userTName-input, .userTNIC-input, .password-input, .confirm-password-input, .email-input {
            width: 100%;
            font-weight: 500;
            font-size: 20px;
            color: #00B5EC;
            background: transparent;
            border: none;
            outline: none;
            padding: 10px 20px;
            border-radius: 30px;
            box-sizing: border-box;
        }

            .user-input::placeholder, .password-input::placeholder,
            .confirm-password-input::placeholder, .email-input::placeholder {
                color: #00B5EC;
            }

        .group-13 {
            border-radius: 30px;
            background: rgba(176, 247, 255, 0.57);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px 40px;
            cursor: pointer;
            margin-top: 20px;
        }

        .pay-now-1 {
            font-weight: 600;
            font-size: 20px;
            color: #00B5EC;
        }

        .empty-space {
            height: 40px;
        }

        .warning {
            color: red;
            font-weight: 600;
            font-size: 16px;
            margin-top: 20px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.group-13').on('click', function (e) {
                e.preventDefault();

                var password = $('.password-input').val();
                var confirmPassword = $('.confirm-password-input').val();

                if (password !== confirmPassword) {
                    if (!$('.warning').length) {
                        $('.container-4').append('<div class="warning">Passwords do not match!</div>');
                    }
                } else {
                    // Submit the form via AJAX
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("UpdateUserProfile", "User")',
                        data: {
                            Username: $('.user-input').val(),
                            Password: password,
                            Email: $('.email-input').val(),
                            TraineeName: $('.userTName-input').val(),
                            TraineeNIC: $('.userTNIC-input').val(),
                        },
                        success: function () {
                            window.location.href = '@Url.Action("UserProfile", "User")';
                        },
                        error: function () {
                            alert("An error occurred while updating the profile.");
                        }
                    });
                }
            });
        });
    </script>
</head>
<body>
    <div class="admin-dashboard">
        <div class="sidebar">
            <div class="logo-container">
                <div class="logo-bg-void-1"></div>
            </div>
            <div class="nav-items">
                <a href="@Url.Action("Dashboard", "User")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/vector_16_x2.svg" />
                        <span class="nav-text">Home</span>
                    </div>
                </a>
                <a href="@Url.Action("UserBookNow", "User")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/vector_28_x2.svg" />
                        <span class="nav-text">Book Now</span>
                    </div>
                </a>
                <a href="@Url.Action("UserMyBookings", "User")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/vector_26_x2.svg" />
                        <span class="nav-text">My Bookings</span>
                    </div>
                </a>
                <a href="@Url.Action("UserInquiries", "User")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/mailed_svgrepo_com_6_x2.svg" />
                        <span class="nav-text">Inquiries</span>
                    </div>
                </a>
            </div>
            <div class="logout-container">
                <a href="@Url.Action("Index", "Home")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/logout_svgrepo_com_x2.svg" />
                        <span class="nav-text logout">Log Out</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="content">
            <div class="header">
                <button class="admin-btn" onclick="location.href='@Url.Action("UserProfile", "User")'">
                    <div class="user-icon">
                        <img src="~/assets/vectors/vector_47_x2.svg" alt="User Icon">
                    </div>
                    <span class="adminsl">@ViewBag.Username</span>
                </button>
            </div>
            <div class="container-4">
                <div class="profile-overview">Edit My Profile</div>
                <div class="line-1"></div>
                <div class="container-7">
                    <span class="username">Username</span>
                    <div class="group-1">
                        <input class="user-input" type="text" placeholder="User Name" value="@ViewBag.Username" />
                    </div>
                </div>
                <div class="container-7">
                    <span class="email">Email</span>
                    <div class="group-29">
                        <input class="email-input" type="email" placeholder="Email" value="@ViewBag.Email" />
                    </div>
                </div>
                <div class="container-3">
                    <span class="password">Password</span>
                    <div class="group-1">
                        <input class="password-input" type="password" placeholder="Password" />
                    </div>
                </div>
                <div class="container-3">
                    <span class="confirm-password">Confirm Password</span>
                    <div class="group-1">
                        <input class="confirm-password-input" type="password" placeholder="Confirm Password" />
                    </div>
                </div>
                <div class="container-7">
                    <span class="username">Trainee Name</span>
                    <div class="group-1">
                        <input class="userTName-input" type="text" placeholder="Trainee Name" value="@ViewBag.TraineeName" />
                    </div>
                </div>
                <div class="container-7">
                    <span class="username">Trainee NIC</span>
                    <div class="group-1">
                        <input class="userTNIC-input" type="text" placeholder="Trainee NIC" value="@ViewBag.TraineeNIC" />
                    </div>
                </div>
                <div class="group-13">
                    <span class="pay-now-1">Save</span>
                </div>
                
            </div>
        </div>
    </div>
</body>
</html>