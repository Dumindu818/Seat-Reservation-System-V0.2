@model List<Seat_Reservation_System.Models.Inquiry>
@{
    Layout = null;
    ViewBag.Title = "User Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inquiries</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-image: url('/assets/images/background.png');
            background-size: cover;
            background-position: center;
            height: 100vh;
            overflow: hidden;
        }

        .user-dashboard {
            display: flex;
            width: 100%;
            height: 100vh;
            position: relative;
        }

        .sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            justify-content: space-between;
        }

        .logo-container {
            width: 100%;
            padding: 0 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-bg-void-1 {
            width: 100%;
            height: 120px;
            background: url('/assets/images/logo_bg_void_1.png') center/contain no-repeat;
        }

        .nav-items {
            display: flex;
            flex-direction: column;
            gap: 30px;
            flex-grow: 0.5;
            justify-content: center;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 20px;
            cursor: pointer;
        }

            .nav-item .icon {
                width: 40px;
                height: 40px;
            }

            .nav-item .nav-text {
                font-weight: 600;
                font-size: 24px;
                color: #00B5EC;
            }

            .nav-item .nav-textsl {
                font-weight: 600;
                font-size: 24px;
                color: #4DB848;
            }

            .nav-item .logout {
                color: #DD5353;
            }

        .logout-container {
            margin-top: auto;
            margin-bottom: 30px;
        }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #00B5EC;
            padding: 40px;
            position: relative;
        }

        .header {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            width: 100%;
            padding: 20px;
        }

        .user-btn {
            display: flex;
            align-items: center;
            gap: 20px; /* Reduced gap for better alignment */
            background: none;
            border: none;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 40px; /* Adjust the positioning to be on the top right */
            z-index: 10; /* Ensure 'User' text and icon are above other elements */
        }

            .user-btn .user {
                font-weight: 600;
                font-size: 48px;
                color: #00B5EC;
            }

            .user-btn .usersl {
                font-weight: 600;
                font-size: 48px;
                color: #4DB848;
            }

            .user-btn .user-icon img {
                width: 60px;
                height: 60px;
            }

        .container-4 {
            border-radius: 30px;
            background: #FFFFFF;
            position: absolute;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px; /* Padding for internal content */
            width: 1150px;
            height: 500px;
            box-sizing: content-box;
            margin-top: 110px; /* Increased margin to prevent overlapping with the header */
            margin-left: 40px; /* Reduced gap from the sidebar */
            margin-bottom: 40px; /* 20px gap from the bottom of the page */
            margin-right: 40px; /* 20px gap from the right side of the page */
        }

        .container-5 {
            display: flex;
            flex-direction: row;
            width: 30%;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .profile-overview {
            width: 100%;
            font-weight: 600;
            font-size: 40px;
            color: #00B5EC;
            text-align: left;
            margin-bottom: 20px;
        }

        .group-14 {
            border-radius: 30px;
            background: rgba(176, 247, 255, 0.57);
            display: flex;
            flex-direction: row;
            align-items: center;
            padding: 10px 20px;
            cursor: pointer;
            position: absolute;
            top: 30px;
            right: 30px;
        }

        .pay-now {
            font-weight: 600;
            font-size: 20px;
            color: #00B5EC;
        }

        .edit-3-svgrepo-com {
            width: 24px;
            height: 24px;
            margin-right: 10px;
        }

        .line-1 {
            background: #00B5EC;
            width: 100%;
            height: 2px;
            margin: 20px 0;
        }

        .username, .email {
            font-weight: 600;
            font-size: 20px;
            color: #00B5EC;
            width: 10%;
        }

        .group-1, .group-29 {
            border-radius: 30px;
            background: rgba(192, 249, 255, 0.28);
            padding: 10px 20px;
            width: 60%;
            box-sizing: border-box;
        }

        .user-1, .usergmail-com {
            font-weight: 500;
            font-size: 20px;
            color: #00B5EC;
        }

        .empty-area {
            height: 60px;
        }

        .group-13 {
            border-radius: 30px;
            background: #00B5EC;
            position: relative;
            text-align: center;
            padding: 5px 5px 5px 5px;
            width: 200px;
            margin-top: 400px;
            box-sizing: border-box;
            align-items: center;
        }

        .pay-now-1 {
            overflow-wrap: break-word;
            font-family: 'Poppins';
            font-weight: 600;
            font-size: 36px;
            color: #FFFFFF;
            text-align: center;
        }

        .container-7 {
            margin: 0 0 36px 12.4px;
            display: flex;
            flex-direction: row;
            width: fit-content;
            box-sizing: border-box;
        }

       .inquiry-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
            width: 100%;
        }

        .inquiry-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgba(176, 247, 255, 0.57);
            border-radius: 20px;
            padding: 15px;
            cursor: pointer;
        }

        .inquiry-title {
            font-weight: 600;
            font-size: 24px;
            color: #00B5EC;
        }

        .inquiry-status {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .status-icon {
            width: 10px;
            height: 10px;
        }

        .status-text {
            font-weight: 600;
            font-size: 18px;
            color: #4DB848; /* Green for Not Replied */
        }

        .status-textrep {
            font-weight: 600;
            font-size: 18px;
            color: #00B5EC; /* Green for Not Replied */
        }

        .inquiry-date {
            font-weight: 600;
            font-size: 18px;
            color: #00B5EC;
        }

        .no-inquiries {
            font-weight: 600;
            font-size: 24px;
            color: #DD5353;
            text-align: center;
        }
        
             


        }</style>

    <script>
        function navigateToInquiry(adminReplied, inquiryID) {
    const action = adminReplied === 'True'
        ? '@Url.Action("AdminInquiriesHistoryDetails", "User", new { id = "__INQUIRY_ID__" })'.replace("__INQUIRY_ID__", inquiryID)
        : '@Url.Action("AdminInquiriesHistoryDetailsNotRep", "User", new { id = "__INQUIRY_ID__" })'.replace("__INQUIRY_ID__", inquiryID);
    const form = document.getElementById(`form-${inquiryID}`);
    form.action = action;
    form.submit();
}


    </script>
    
</head>
<body>
    <div class="user-dashboard">
        <div class="sidebar">
            <div class="logo-container">
                <div class="logo-bg-void-1"></div>
            </div>
            <div class="nav-items">
                <a href="@Url.Action("Dashboard", "User")" style="text-decoration: none;">
                <div class="nav-item">
                    <img class="icon" src="~/assets/vectors/vector_16_x2.svg" />
                    <span class="nav-text">Home</span>
                </div>
                </a>
                <a href="@Url.Action("UserBookNow", "User")" style="text-decoration: none;">
                <div class="nav-item">
                    <img class="icon" src="~/assets/vectors/vector_28_x2.svg" />
                    <span class="nav-text">Book Now</span>
                </div>
                </a>
                <a href="@Url.Action("UserMyBookings", "User")" style="text-decoration: none;">
                <div class="nav-item">
                    <img class="icon" src="~/assets/vectors/vector_26_x2.svg" />
                    <span class="nav-text">My Bookings</span>
                </div>
                </a>
                <a href="@Url.Action("UserInquiries", "User")" style="text-decoration: none;">
                <div class="nav-item">
                    <img class="icon" src="~/assets/vectors/mailed_svgrepo_com_4_x2.svg" />
                    <span class="nav-textsl">Inquiries</span>
                </div>
                </a>
            </div>
            <div class="logout-container">
                <a href="@Url.Action("Index", "Home")" style="text-decoration: none;">
                    <div class="nav-item">
                        <img class="icon" src="~/assets/vectors/logout_svgrepo_com_x2.svg" />
                        <span class="nav-text logout">Log Out</span>
                    </div>
                </a>
            </div>
        </div>

        <div class="content">
            <div class="header">
                <button class="user-btn" onclick="location.href='@Url.Action("UserProfile", "User")'">
                    <div class="user-icon">
                        <img src="~/assets/vectors/vector_59_x2.svg" alt="User Icon">
                    </div>
                    <span class="user">@ViewBag.Username</span>
                </button>
            </div>


            <div class="container-4">
                <span class="profile-overview">Inquiries</span>
                <a href="@Url.Action("UserInquiries", "User")">
                    <div class="group-14">
                        <img class="edit-3-svgrepo-com" src="~/assets/vectors/vector_58_x2.svg" />
                        <span class="pay-now">Back</span>
                    </div>
                </a>
                <div class="line-1"></div>
                <div class="inquiry-list">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var inquiry in Model.OrderBy(i => i.AdminReplied).ThenBy(i => i.InquiryDate))
                        {
                            <div class="inquiry-item" onclick="navigateToInquiry('@inquiry.AdminReplied', '@inquiry.InquiryId')">
                                <div class="inquiry-title">
                                    @Html.DisplayFor(modelItem => inquiry.Title)
                                </div>
                                <div class="inquiry-status">
                                    @if (inquiry.AdminReplied)
                                    {
                                        <img class="status-icon" src="~/assets/vectors/vector_20_x2 (1).svg" style="width: 10px; height: 10px; vertical-align: middle;" />
                                        <span class="status-text">Admin Replied</span>
                                    }
                                    else
                                    {
                                        <span class="status-textrep">Not Replied</span>
                                    }
                                </div>
                                <div class="inquiry-date">@inquiry.InquiryDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <!-- Hidden Form to Submit Inquiry Data -->
                            <form id="form-@inquiry.InquiryId" method="post" style="display:none;" action="@Url.Action("NavigateInquiry", "Admin")">
                                @Html.HiddenFor(modelItem => inquiry.InquiryId)
                                @Html.HiddenFor(modelItem => inquiry.Title)
                                @Html.HiddenFor(modelItem => inquiry.Description)
                                @Html.HiddenFor(modelItem => inquiry.InquiryDate)
                                @Html.HiddenFor(modelItem => inquiry.AdminReplied)
                                @Html.HiddenFor(modelItem => inquiry.AdminReply)
                                <!-- Add any other fields you need to pass -->
                            </form>
                        }
                    }
                    else
                    {
                        <div class="no-inquiries">
                            No inquiries found
                        </div>
                    }
                </div>

                
            </div>
        </div>

    </div>
</body>
</html>
