                            }
                        });
                    }


                    // Function to fetch leave count using AJAX
                    function getLeaveCount(username) {
                        $.ajax({
                            url: '/Book/GetCount',  // Adjust this to match your actual API endpoint
                            type: 'GET',
                            data: { username: username },
                            success: function (response) {
                                // Response is expected to be an integer
