@{
    ViewData["Title"] = ViewData["Title"] ?? "Seat Reservation System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seat Reservation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Seat_Reservation_System.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('/images/Home.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .logo-bg-void-11 {
            height: 85px;
            width: 85px;
            position: relative;
            object-fit: cover;
        }

        .navbar {
            background-color: transparent;
        }

        .navbar-brand img {
            height: 60px;
        }

        .nav-link {
            color: #00AEEF;
            font-weight: bold;
            font-size: 1.25rem;
        }

        .navbar-nav .nav-item + .nav-item {
            margin-left: 50px;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;base64,...'); /* Bootstrap icon SVG in base64 */
        }

        /* Highlighted Button Styles */
        .nav-link.active {
            background-color: white;
            color: #008000;
            border-radius: 20px;
            box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
            padding: 10px 10px;
            text-align: center;
            display: inline-block;
            width: 150px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img class="logo-bg-void-11" loading="lazy" alt="Logo" src="~/images/logo bg void.png" />
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <!-- Updated Admin Login link -->
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Login">Administrator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <!-- Updated User Login link -->
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // JavaScript to toggle active class based on the current page
        $(document).ready(function () {
            var currentPath = window.location.pathname;
            $('.navbar-nav .nav-link').each(function () {
                if ($(this).attr('href') === currentPath) {
                    $('.navbar-nav .nav-link').removeClass('active').css('color', '#00AEEF'); // Reset other links' color
                    $(this).addClass('active').css('color', '#008000'); // Set the active link's color to green
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
