@model Seat_Reservation_System.Models.LoginViewModel

<style>
    .login-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 50px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-section {
        flex: 1;
        padding-right: 50px;
        margin-bottom: 120px;
    }

    .welcome-text {
        color: #00AEEF;
        font-size: 4.5rem;
    }

    .sub-text {
        color: #003366;
        font-size: 1.25rem;
    }

    .form-section {
        flex: 1;
        max-width: 600px;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    }

        .form-section h2 {
            text-align: center;
            color: #00AEEF;
            margin-bottom: 30px;
        }

        .form-section input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .form-section button {
            width: 100%;
            padding: 10px;
            background-color: #008000;
            color: #ffffff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1rem;
        }

            .form-section button:hover {
                background-color: #006400;
            }

        .form-section p {
            text-align: center;
            margin-top: 20px;
        }

            .form-section p a {
                color: #00AEEF;
                text-decoration: none;
            }

                .form-section p a:hover {
                    text-decoration: underline;
                }
</style>

<main class="login-container">
    <div class="welcome-section">
        <div class="welcome-text">Welcome Back!</div>
        <div class="sub-text">Log in to continue reserving seats.</div>
    </div>

    <div class="form-section">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div>
                <input asp-for="Username" placeholder="Enter Username" />
                <span asp-validation-for="Username"></span>
            </div>

            <div>
                <input asp-for="Password" type="password" placeholder="Enter Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <button type="submit">Login</button>
        </form>

        <p>
            Don't have an account? <a asp-action="Register">Register here</a>
        </p>
    </div>
</main>
