@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-image: url('assets/images/background.png'); /* Replace with your background image path */
            background-size: cover;
            background-position: center;
            height: 100vh;
            overflow: hidden; /* Prevent scrolling */
        }

        .admin-dashboard {
            display: flex;
            width: 100%;
            height: 100vh;
            position: relative;
        }

        .sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.9); /* White panel */
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 30px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            justify-content: space-between;
        }

        .logo-container {
            width: 100%;
            padding: 0 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-bg-void-1 {
            width: 100%;
            height: 120px;
            background: url('assets/images/logo_bg_void_1.png') center/contain no-repeat;
        }

        .nav-items {
            display: flex;
            flex-direction: column;
            gap: 30px;
            flex-grow: 0.5;
            justify-content: center;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 20px;
            cursor: pointer;
        }

            .nav-item .icon {
                width: 40px;
                height: 40px;
            }

            .nav-item .nav-text {
                font-weight: 600;
                font-size: 24px;
                color: #00B5EC;
            }

            .nav-item .nav-textsl {
                font-weight: 600;
                font-size: 24px;
                color: #4DB848;
            }

            .nav-item .logout {
                color: #DD5353;
            }

        .logout-container {
            margin-top: auto;
            margin-bottom: 30px;
        }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #00B5EC;
            padding: 40px;
            position: relative;
        }

        .header {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            width: 100%;
            padding-bottom: 20px;
        }

        .admin-btn {
            display: flex;
            align-items: center;
            gap: 20px;
            background: none;
            border: none;
            cursor: pointer;
            position: absolute;
            top: 20px;
            right: 40px; /* Adjust the positioning to be on the top right */
            z-index: 10;
        }

            .admin-btn .admin {
                font-weight: 600;
                font-size: 48px;
                color: #00B5EC;
            }

            .admin-btn .user-icon img {
                width: 60px;
                height: 60px;
            }

        .main-content {
            text-align: left;
            margin-top: -150px;
        }

        .welcome-text {
            font-weight: 700;
            font-size: 72px;
            margin-bottom: 20px;
        }

        .description-text {
            font-weight: 500;
            font-size: 24px;
            color: #0056A4;
        }
    </style>
   
</head>
<body>
    <div class="admin-dashboard">
        <div class="sidebar">
            <div class="logo-container">
                <div class="logo-bg-void-1"></div>
            </div>
            <div class="nav-items">
                <div class="nav-item">
                    <img class="icon" src="assets/vectors/vector_48_x2.svg" />
                    <span class="nav-textsl">Home</span>
                </div>
                <div class="nav-item">
                    <img class="icon" src="assets/vectors/vector_28_x2.svg" />
                    <span class="nav-text">Manage Seats</span>
                </div>
                <div class="nav-item">
                    <img class="icon" src="assets/vectors/vector_26_x2.svg" />
                    <span class="nav-text">Booking Log</span>
                </div>
                <div class="nav-item">
                    <img class="icon" src="assets/vectors/mailed_svgrepo_com_6_x2.svg" />
                    <span class="nav-text">Inquiries</span>
                </div>
            </div>
            <div class="logout-container">
                <div class="nav-item">
                    <img class="icon" src="assets/vectors/logout_svgrepo_com_x2.svg" />
                    <span class="nav-text logout">Log Out</span>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="header">
                <button class="admin-btn">
                    <div class="user-icon">
                        <img src="assets/vectors/vector_59_x2.svg" alt="User Icon">
                    </div>
                    <span class="admin">Admin</span>
                </button>
            </div>

            <div class="main-content">
                <div class="welcome-text">
                    Welcome to <br />
                    Admin Dashboard!
                </div>
                <div class="description-text">
                    You can manage seats, surf through booking logs and reply to user inquiries.
                </div>
            </div>
        </div>
    </div>


</body>
</html>
