@model Seat_Reservation_System.Models.AdminLoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        .login-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 50px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .left-section {
            flex: 1;
            padding-right: 50px;
            margin-bottom: 120px;
        }

            .left-section h1 {
                color: #00AEEF;
                font-size: 4.5rem;
            }

            .left-section p {
                color: #003366;
                font-size: 1.25rem;
            }

        .right-section {
            flex: 1;
            max-width: 600px;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
        }

            .right-section h2 {
                text-align: center;
                color: #00AEEF;
                margin-bottom: 30px;
            }

        .form-group input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #008000;
            color: #ffffff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1rem;
        }

            .btn-primary:hover {
                background-color: #006400;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <h1>Hello,<br /> Admin!</h1>
            <p>Time to get things rolling. Log in to manage the system.</p>
        </div>
        <div class="right-section">
            <h2>Log In</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <input asp-for="AdminUsername" class="form-control" placeholder="Enter Username" />
                    <span asp-validation-for="AdminUsername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="AdminPassword" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="AdminPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
